<?xml version="1.0" encoding="utf-8"?>
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="@drawable/wallpaper"
    android:scaleType = "centerCrop">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/textViewExplorationHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="@string/txtExplorationHeader"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewExplorationPrimaryHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Primary Header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a52a2a"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewExplorationPrimaryResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="primary results" />

    <Button
        android:id="@+id/buttonExploreChoice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/txtButtonViewCharts" />

    <TextView
        android:id="@+id/textViewExplorationSecondaryHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLSPrimaryResults"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Secondary Header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a52a2a"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewExplorationSecondaryResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="secondary results" />

    <TextView
        android:id="@+id/textViewExplorationMinesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Mines Header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a52a2a"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewExplorationMinesRuins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Mines and ruins" />

    <TextView
        android:id="@+id/textViewExplorationInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="extra info 1" />

    <TextView
        android:id="@+id/textViewExplorationInfo2a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="extra info 2" />

    <TextView
        android:id="@+id/textViewExplorationFertilityHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Fertility Header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a52a2a"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewExplorationHexResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewLSMinesHeader"
        android:layout_alignRight="@+id/textViewLSMinesRuins"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="fertility results" />
 
    <TextView
        android:id="@+id/textViewExploration2Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Exploration Results (2)"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewExploration2PrimaryHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Primary Header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a52a2a"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewExploration2PrimaryResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="primary results" />

    <Button
        android:id="@+id/buttonExploreChoice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/txtButtonViewCharts" />

    <TextView
        android:id="@+id/textViewExploration2SecondaryHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLSPrimaryResults"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Secondary Header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a52a2a"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewExploration2SecondaryResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="secondary results" />

    <TextView
        android:id="@+id/textViewExploration2MinesHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Mines Header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a52a2a"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewExploration2MinesRuins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Mines and ruins" />

    <TextView
        android:id="@+id/textViewExploration2Info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="extra info 1" />

    <TextView
        android:id="@+id/textViewExploration2Info2a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="extra info 2" />

    <TextView
        android:id="@+id/textViewExploration2FertilityHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Fertility Header"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a52a2a"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewExploration2HexResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewLSMinesHeader"
        android:layout_alignRight="@+id/textViewLSMinesRuins"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="fertility results" />

</LinearLayout>
</ScrollView>